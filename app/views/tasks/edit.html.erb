<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg">
        <div class="card-body">
          <h2 class="text-center mb-4">Edit Task</h2>

          <%= form_with model: @task, class: "needs-validation" do |f| %>
            <div class="mb-3">
              <%= f.label :title, class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :details, class: "form-label" %>
              <%= f.text_field :details, class: "form-control" %>
            </div>

            <div class="form-check mb-3">
              <%= f.check_box :completed, class: "form-check-input", id: "task_completed" %>
              <label for="task_completed" class="form-check-label">Task completed</label>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "Back to list", tasks_path, class: "btn btn-secondary" %>
              <%= f.submit "Save Changes", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
