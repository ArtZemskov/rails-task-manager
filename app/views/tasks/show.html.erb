<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-body">
          <h2 class="text-center mb-3"><%= @task.title %></h2>
          <p class="text-muted text-center"><%= @task.details %></p>

          <div class="form-check text-center my-3">
            <%= check_box_tag "task_completed", @task.id, @task.completed, class: "form-check-input me-2" %>
            <label class="form-check-label">This task is completed</label>
          </div>

          <div class="d-flex justify-content-between mt-4">
            <%= link_to "Edit this task", edit_task_path, class: "btn btn-outline-primary" %>
            <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary" %>
            <%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
