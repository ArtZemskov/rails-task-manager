<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg">
        <div class="card-body">
          <h2 class="text-center mb-4">Create a New Task</h2>

          <%= form_with model: @task, class: "needs-validation" do |f| %>
            <div class="mb-3">
              <%= f.label :title, class: "form-label fw-bold" %>
              <%= f.text_field :title, class: "form-control", placeholder: "Enter task title" %>
            </div>

            <div class="mb-3">
              <%= f.label :details, class: "form-label fw-bold" %>
              <%= f.text_field :details, class: "form-control", placeholder: "Enter task details" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Create Task", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= link_to "Back to list", tasks_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
